<h1>Account</h1>
<div class="form-wrapper">

  <%= devise_error_messages! %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'edit_registration', method: :put }) do |f| %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :full_name %>
      <%= f.text_field :full_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :company %>
      <%= f.text_field :company, autofocus: true %>
    </div>

    <div class="field top-of-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :retype_password %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <p class="note">(leave blank if you don't want to change it)</p>
    </div>

    <div class="field top-of-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "off" %>
      <p class="note">(we need your current password to confirm your changes)</p>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>
</div>

<h2>Close</h2>
<p>No longer wish to use our API? <%= link_to "Close your account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>.</p>
