{
    "filter": {
        "bool": {
            "must": [
                {
                    "terms": {
                        "source": ["AUSTRALIA"]
                    }
                }
            ],
            "should": [
                {
                    "terms": {
                        "countries": ["US", "AU"]
                    }
                }
            ]
        }
    },
    "query": {
        "bool": {
            "must": [
                {
                    "multi_match": {
                        "fields": [
                            "alt_names",
                            "name",
                            "remarks",
                            "title"
                        ],
                        "operator": "and",
                        "query": "horses"
                    }
                }
            ]
        }
    }
}
